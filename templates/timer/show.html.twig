{% extends 'base.html.twig' %}

{% block title %}Timer{% endblock %}

{% block body %}
    <h1>Timer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ timer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ timer.name }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ timer.state }}</td>
            </tr>
            <tr>
                <th>TimerStart</th>
                <td>{{ timer.timerStart ? timer.timerStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ timer.time }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ timer.createdAt ? timer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('timer_index') }}">back to list</a>

    <a href="{{ path('timer_edit', {'id': timer.id}) }}">edit</a>

    {{ include('timer/_delete_form.html.twig') }}
{% endblock %}
